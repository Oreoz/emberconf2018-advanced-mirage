<div class="flex">
  <div class="w-col flex-no-shrink min-h-screen p-4 border-r bg-grey-lightest">
    <p class='mt-3 text-xl'>
      {{#link-to 'application' (query-params exercise=null) class='text-black no-underline'}}
        Advanced Mirage
      {{/link-to}}
    </p>
    <ul class='list-reset mt-12'>
      <li class='mt-3'>
        {{#link-to 'application' (query-params exercise=1) class='text-black hover:text-grey no-underline' activeClass='text-grey'}}
          Exercise 1
        {{/link-to}}
      </li>
      <li class='mt-3'>
        {{#link-to 'application' (query-params exercise=2) class='text-black hover:text-grey no-underline' activeClass='text-grey'}}
          Exercise 2
        {{/link-to}}
      </li>
    </ul>
  </div>
  <div class="flex-grow font-sans min-h-screen">
    {{#if exercise}}
      {{component activeComponentName}}
    {{else}}
      <div class="max-w-600 mx-auto text-center pt-8">
        <h1 class='mt-8'>Advanced Mirage training</h1>
        <h2 class='mt-3 text-xl font-medium opacity-50'>– EmberConf 2018 –</h2>

        <p class='mt-12 text-lg'>Choose an exercise from the left.</p>
      </div>
    {{/if}}
  </div>
</div>
