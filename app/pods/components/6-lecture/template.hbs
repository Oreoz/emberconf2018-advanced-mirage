<div class="h-screen overflow-y-scroll">
  <div class="p-4">
    <div class="mx-auto">

      <h1 class='mt-3 mb-8'>Exercise</h1>
      <p class='text-sm leading-normal'>Mirage's ORM.</p>

      <div class="mt-6 w-80% mx-auto">
        {{#each-in db as |table models|}}
          {{#if models}}

            <div class="bg-grey-darker text-white p-2 text-sm mt-4">
              {{table}}
            </div>

            {{#each models as |model|}}

              <div class="my-1">
                {{#each-in model as |attr value|}}
                  <div class="bg-grey-light p-1">
                    <span class="text-grey-darker">
                      {{attr}}:
                    </span>

                    {{#if (is-polymorphic-key value)}}
                      &lbrace; type: {{value.type}}, id: {{value.id}} &rbrace;
                    {{else}}
                      {{value}}
                    {{/if}}
                  </div>
                {{/each-in}}
              </div>
            {{/each}}

          {{/if}}
        {{/each-in}}
      </div>

    </div>
  </div>
</div>
